<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name = "viewModel"
            type = "com.finapp.gramfin.finapp.feature.training_totals.TrainingTotalsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/totals_confetti"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/confetti"
            app:layout_constraintBottom_toTopOf="@+id/totals_congratulation_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/totals_congratulation_text"
            android:layout_width="340dp"
            android:layout_height="52dp"
            android:text="@string/totals_text_congratulation"
            android:textAlignment="center"
            android:textColor="@color/colorBlackText"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/totals_result_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totals_confetti" />

        <TextView
            android:id="@+id/totals_result_text"
            android:layout_width="340dp"
            android:layout_height="24dp"
            android:text="@string/totals_text_result"
            android:textAlignment="center"
            android:textColor="@color/colorBlackText"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/totals_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totals_congratulation_text" />

        <TextView
            android:id="@+id/totals_text"
            android:layout_width="340dp"
            android:layout_height="24dp"
            android:text="@{viewModel.totals}"
            android:textAlignment="center"
            android:textColor="@color/colorBlackText"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/totals_button_repeat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totals_result_text" />

        <Button
            android:id="@+id/totals_button_repeat"
            android:layout_width="124dp"
            android:layout_height="40dp"
            android:background="@drawable/element_background_button_skip"
            android:gravity="center"
            android:text="@string/totals_btn_repeat_text"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:onClick="@{viewModel::onClick}"
            app:layout_constraintBottom_toTopOf="@+id/totals_button_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totals_text" />

        <Button
            android:id="@+id/totals_button_home"
            android:layout_width="124dp"
            android:layout_height="40dp"
            android:background="@drawable/element_background_button_skip"
            android:gravity="center"
            android:text="@string/totals_btn_home_text"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:onClick="@{viewModel::onClick}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totals_button_repeat" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>